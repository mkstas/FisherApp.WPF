<Window x:Class="FisherApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FisherApp.WPF"
        mc:Ignorable="d"
        Title="Рыбаки" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu VerticalAlignment="Top" Height="20">
            <MenuItem Header="Файл" Height="20">
                <MenuItem Header="Открыть" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Настройки" Height="20">
                <MenuItem Header="Выбор цвета" />
                <MenuItem Header="Начальное заполнение" />
            </MenuItem>
            <MenuItem Header="Справка" Height="20">
                <MenuItem Header="О программе" Click="OpenAboutWindow_Click" />
                <MenuItem Header="Об авторе" Click="OpenAuthorWindow_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
