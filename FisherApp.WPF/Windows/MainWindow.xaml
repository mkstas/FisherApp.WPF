<Window x:Class="FisherApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FisherApp.WPF"
        mc:Ignorable="d"
        Title="Рыбаки" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Menu VerticalAlignment="Top" Height="20">
            <MenuItem Header="Файл" Height="20">
                <MenuItem Header="Открыть" Click="OpenMenuFile_Click" />
                <MenuItem Header="Сохранить" Click="SaveMenuFile_Click" />
                <MenuItem Header="Выход" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Настройки" Height="20">
                <MenuItem Header="Выбор цвета" Click="OpenColorsWindow_Click" />
                <MenuItem Header="Начальное заполнение" Click="OpenInitialWindow_Click" />
            </MenuItem>
            <MenuItem Header="Справка" Height="20">
                <MenuItem Header="О программе" Click="OpenAboutWindow_Click" />
                <MenuItem Header="Об авторе" Click="OpenAuthorWindow_Click" />
            </MenuItem>
        </Menu>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Height="24" Margin="8">
            <Button x:Name="startBtn" Width="90" Margin="0,0,8,0" Height="24" Click="StartButton_Click">Старт</Button>
            <Button x:Name="pauseBtn" Width="90" Margin="0,0,8,0" Height="24" Click="PauseButton_Click">Пазуа</Button>
            <Button x:Name="exitBtn" Width="90" Height="24" Click="ExitButton_Click">Выход</Button>
        </StackPanel>
    </Grid>
</Window>
